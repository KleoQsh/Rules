alert tcp $EXTERNAL_NET any -> $HOME_NET 445 (msg:"PTHTECH - SMB NTLMSSP Auth Attempt Detected"; flow:to_server,established; content:"NTLMSSP_AUTH"; nocase; threshold:type both, track by_src, count 5, seconds 300; classtype:attempted-admin; sid:2300001; rev:1;)
alert tcp $EXTERNAL_NET any -> $HOME_NET 445 (msg:"PTHTECH - Multiple SMB Authentication Failures"; flow:to_server,established; content:"STATUS_LOGON_FAILURE"; nocase; threshold:type both, track by_src, count 7, seconds 600; classtype:attempted-admin; sid:2300002; rev:1;)
alert tcp $EXTERNAL_NET any -> $HOME_NET 88 (msg:"PTHTECH - Kerberos AS-REQ Pre-Auth Failure"; flow:to_server,established; content:"KRB5KRB_ERR_PREAUTH_FAILED"; nocase; threshold:type both, track by_src, count 7, seconds 600; classtype:attempted-admin; sid:2300003; rev:1;)
alert tcp $EXTERNAL_NET any -> $HOME_NET 88 (msg:"PTHTECH - Suspicious Kerberos TGS Request"; flow:to_server,established; content:"TGS-REQ"; nocase; threshold:type both, track by_src, count 15, seconds 300; classtype:attempted-admin; sid:2300004; rev:1;)
alert tcp $EXTERNAL_NET any -> $HOME_NET 445 (msg:"PTHTECH - NTLMSSP Negotiate with Suspicious Flags"; flow:to_server,established; content:"NTLMSSP_NEGOTIATE"; nocase; threshold:type both, track by_src, count 10, seconds 300; classtype:attempted-admin; sid:2300005; rev:1;)
